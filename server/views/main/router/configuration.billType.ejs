<div class="flex-vertical">
  <div class="page-header h3 text-primary col-lg-12" sytle="">
    数据
  </div>

  <div class="col-lg-12">
  <span style="align-self: center" class="marginB_X h4 text-warning" ng-if="undefined==recorder">无数据</span>

  <button class="btn btn-primary btn-sm" ng-if="undefined!=recorder"><span class="fa fa-plus marginR_1"></span>添加</button>
  <table class="table table-hover table-bordered marginT_4" ng-if="undefined!=recorder">
    <thead>
      <!--<th><input  type="checkbox" name="all" ng-model=""></th>-->
      <th class="text-primary">编号</th>
      <!--<th>所属目录</th>-->
      <th class="text-primary ">单据类别</th>
      <th class="text-primary hidden-sm">父类别</th>
      <th class="text-primary hidden-xs hidden-sm">创建时间</th>
      <!--<th class="text-primary hidden-xs hidden-sm">修改时间</th>-->
      <th class="text-primary">操作</th>
    </thead>
    <tbody>
      <tr ng-repeat="(idx,value) in recorder">
        <td>{{idx}}</td>
        <td>{{value.name}}</td>
        <td>{{value.parentBillType}}</td>
        <td>{{value.cDate}}</td>
        <!--<td>{{value.uDate}}</td>-->
        <td style="align:left">
          <button class="btn btn-default btn-xs"><span class="fa fa-edit marginR_1" ></span>修改</button>
          <button class="btn btn-danger btn-xs"><span class="fa fa-trash-o marginR_1"></span>删除</button>
        </td>
      </tr>
    </tbody>
  </table>
  </div>
</div>
