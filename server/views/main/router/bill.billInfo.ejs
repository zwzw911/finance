                <select  class="form-control col-lg-2 col-md-3 col-sm-4 col-xs-4" ng-model="allData.selectedQueryFieldOperator" ng-if="['float','int','number'].indexOf(allData.inputRule[allData.selectedQueryField['key']]['type'])>-1">
